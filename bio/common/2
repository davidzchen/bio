#include "bio/common/word-iterator.h"

#include <optional>
#include <string>

namespace bio {

WordIterator(absl::string_view str, absl::string_view separators)
    : str_(std::string(str)), start_cursor_(0), forward_cursor_(0) {
  for (char c : separators) {
    separators_.insert(c);
  }
}

auto WordIterator::Next() -> std::optional<std::string> {
  if (str_.empty()) {
    return std::nullopt;
  }

  // We have reached the end of the string.
  if (start_cursor_ == forward_cursor_ && forward_cursor_ == str_.size()) {
    return std::nullopt;
  }

  while (forward_cursor_ < str_.size()) {
  }
}

}  // namespace bio
